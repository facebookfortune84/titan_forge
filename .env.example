# TitanForge Environment Configuration Template
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!
# Use a secrets vault (AWS Secrets Manager, HashiCorp Vault, etc.) for production

# ==========================================
# ENVIRONMENT & RUNTIME
# ==========================================
ENV=development
PYTHONIOENCODING=utf-8
PYTHONUTF8=1
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-jwt-key-change-this-to-random-string-32-chars-minimum

# ==========================================
# APPLICATION PATHS
# ==========================================
ROOT_DIRECTORY=./
WORKSPACE_ROOT=./agent_files_workspace

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL
POSTGRES_USER=titanforge_user
POSTGRES_PASSWORD=change_this_to_strong_password
POSTGRES_DB=titanforge_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=titanforge_db
DB_USERNAME=titanforge_user
DB_PASSWORD=change_this_to_strong_password
DATABASE_URL=postgresql://titanforge_user:change_this_to_strong_password@localhost:5432/titanforge_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ==========================================
# LLM & AI PROVIDERS
# ==========================================
# Choose your primary LLM provider
REALM_MODEL_CORE=GROQ
LLM_MODEL_NAME=groq

# Groq (Recommended for development - free tier available)
GROQ_API_KEY=your_groq_api_key_here
FAST_LLM_MODEL=llama3-8b-8192
SMART_LLM_MODEL=llama3-70b-8192

# OpenAI (Optional)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini (Optional)
GEMINI_API_KEY=your_gemini_api_key_here

# Other LLM providers (Optional)
NVIDIA_API_KEY=your_nvidia_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ==========================================
# PAYMENT PROCESSING (STRIPE)
# ==========================================
# Get keys from https://dashboard.stripe.com/apikeys
# Use sk_test_* for development, sk_live_* for production
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key_here

# ==========================================
# GITHUB INTEGRATION
# ==========================================
# Create OAuth app at https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_REPO=your_github_username/your_repo_name
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
# Gmail SMTP settings
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# IMAP settings for email reading
IMAP_SERVER=imap.gmail.com
IMAP_USER=your_email@gmail.com
IMAP_PASS=your_gmail_app_password_here

# ==========================================
# SOCIAL MEDIA & MARKETING (OPTIONAL)
# ==========================================
# LinkedIn Integration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_PROFILE_URN=urn:li:organization:your_org_id
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Facebook Integration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_PAGE_TOKEN=your_facebook_page_token
FACEBOOK_USER_TOKEN=your_facebook_user_token

# ==========================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ==========================================
# Shopify
SHOPIFY_SHOP_URL=https://your-shop.myshopify.com
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_ADMIN_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_API_VERSION=2025-10

# WordPress
WORDPRESS_SITE_URL=https://your-wordpress-site.com
WORDPRESS_API_URL=https://your-wordpress-site.com/wp-json/wp/v2
WORDPRESS_USER=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_password

# ==========================================
# DISCORD COMMUNICATION (OPTIONAL)
# ==========================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_WEBHOOK_ARCHITECT=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ==========================================
# LINEAR INTEGRATION (OPTIONAL)
# ==========================================
LINEAR_API_KEY=lin_api_your_linear_api_key_here

# ==========================================
# ENCRYPTION & SECURITY
# ==========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-hex-string-for-encryption
ARG_ENCRYPTION_KEY=your-32-character-hex-string-for-encryption
REALM_MASTER_KEY=your-master-key-for-realm-access

# ==========================================
# CORS & SECURITY
# ==========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
AUTH_RATE_LIMIT_REQUESTS_PER_MINUTE=10

# ==========================================
# ANALYTICS & MONITORING
# ==========================================
# Optional: Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# Optional: Sentry error tracking
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/1234567

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_BLOG=true
ENABLE_LEAD_CAPTURE=true
ENABLE_AGENT_CREATION=true
ENABLE_PAYMENTS=true
